Public Function XMLShortcuts() As String
   '------------------------------------------------------------------------------------------------------------------------
   '   Returns the XML for the item.
   '------------------------------------------------------------------------------------------------------------------------
   Dim ErrNo As Long, ErrSrc As String, ErrDesc As String
   Const cProcName As String = "XMLShortcuts"
   '------------------------------------------------------------------------------------------------------------------------
   Dim sChildren As String
   Dim sAttributes As String

   On Error GoTo ErrorHandler

   '-----create the XML for the attributes
   sAttributes = ""
   If (Len(ShortcutName) > 0) Then sAttributes = sAttributes + XMLAttribute("name", ShortcutName, False)
   If (Len(Url) > 0) Then sAttributes = sAttributes + XMLAttribute("url", Url, False)
   If (Len(EntityID) > 0) Then sAttributes = sAttributes + XMLAttribute("type", EntityID, False)
   If (Len(IsPinned) > 0) Then sAttributes = sAttributes + XMLAttribute("pin", IsPinned, False)

   '-----create the XML for the object
   XMLShortcuts = XMLElement("Shortcut", sAttributes, , sChildren)

   Exit Function

ErrorHandler:
   CatchError ErrNo, ErrSrc, ErrDesc, cModName, cProcName
   If Err.Number = 0 Then Resume Next
   Err.Raise ErrNo, ErrSrc, ErrDesc
End Function

