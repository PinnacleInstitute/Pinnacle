      If (Len(AuthUserID) > 0) Then sAttributes = sAttributes + XMLAttribute("AuthUserID", AuthUserID, False)
      If (Len(EntityID) > 0) Then sAttributes = sAttributes + XMLAttribute("EntityID", EntityID, False)
      If (Len(ItemID) > 0) Then sAttributes = sAttributes + XMLAttribute("ItemID", ItemID, False)
      If (Len(ShortcutName) > 0) Then sAttributes = sAttributes + XMLAttribute("ShortcutName", ShortcutName, False)
      If (Len(URL) > 0) Then sAttributes = sAttributes + XMLAttribute("URL", URL, False)
      If (Len(IsPinned) > 0) Then sAttributes = sAttributes + XMLAttribute("IsPinned", IsPinned, False)
